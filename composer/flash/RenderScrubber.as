package {	import flash.display.*;	import flash.net.URLRequest;	import flash.net.URLLoader;		import flash.utils.Timer;	import flash.events.*;		public class RenderScrubber extends MovieClip {		var scrubber_container:Sprite = new Sprite();		var playhead:Sprite = new Sprite();		var scrubber:Loader = new Loader();		var myTimer:Timer = new Timer(50);				var left_position:int = 25; 		var top_position:int = 66; 		var move_per_tick:Number;		var total_steps:int;				public function render(_stage, total_steps) {						this.total_steps = total_steps; 			//scrubber.load(new URLRequest("http://riff.jimmytidey.co.uk/FLASH%20SRC/images/scrubber.png"));			//playhead.load(new URLRequest("http://riff.jimmytidey.co.uk/FLASH%20SRC/images/playhead.png"));						var scrubber:MovieClip = new MovieClip();			scrubber.graphics.beginFill(0xeeeeee, 1);			scrubber.graphics.drawRect(0, 0, 450, 20);			scrubber.graphics.endFill();									playhead.graphics.beginFill(0x000000, 1);			playhead.graphics.drawRect(20, 20, 5, 20);			playhead.graphics.endFill();						playhead.x = -25;			playhead.y = -20;						scrubber_container.x = left_position;			scrubber_container.y = top_position;			scrubber_container.addChild(scrubber);			scrubber_container.addChild(playhead);			_stage.addChild(scrubber_container);			myTimer.addEventListener(TimerEvent.TIMER, step);		}				public function movePlayhead(step) {			var distance_per_step:Number = 450 / this.total_steps;			playhead.x = (step * distance_per_step) -25;		}				public function player(total_length) {			move_per_tick = 580 / (total_length/50); 			myTimer.reset();			myTimer.start();		}		public function step(event:TimerEvent) {			playhead.x = playhead.x + move_per_tick;		}				public function stoper() {			myTimer.stop(); 		}	}}