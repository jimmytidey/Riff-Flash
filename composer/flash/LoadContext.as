package {		import flash.events.*;	import flash.utils.*;	import flash.display.*; 	import flash.text.*; 	import flash.MovieClip; 		public class LoadContext extends MovieClip {				var _stage:Stage; 				public function LoadContext(stage) { 			_stage = stage; 		}				function debug() { 			var user_name:String = root.loaderInfo.parameters.project_name; 			if (user_name == null) {				trace("debug mode");				debug_state = "true";			}			else {debug_state="false";}   						return debug_state; 		}				function userName() { 			var user_name:String = root.loaderInfo.parameters.username;			if (user_name == null) {				user_name = "tom"; 			}			return user_name;		}				function projectName() { 					var project_name:String;			if (root.loaderInfo.parameters.project_name) {				project_name = root.loaderInfo.parameters.project_name;			}			else {				project_name = "Example"; 			}			return project_name; 		}	}}